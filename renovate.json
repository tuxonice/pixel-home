{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "rangeStrategy": "pin",
    "baseBranches": ["master"],
    "packageRules": [
        {
            "updateTypes": ["patch", "pin", "digest", "minor"],
            "automerge": true
        },
        {
            "matchManagers": ["composer"],
            "matchPackageNames": [
                "php"
            ],
            "enabled": false
        }
    ]
}
